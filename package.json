{
  "name": "watch-mega",
  "version": "1.0.0",
  "description": "Upload any video file and watch it in sync with your friends!",
  "main": "index.js",
  "scripts": {
    "start": "node -r ts-node/register ./src/index.ts",
    "dev": "nodemon",
    "ts:build": "tsc --build tsconfig.server.json",
    "next:build": "next build",
    "docker:build": "docker build . -t watchmega:latest",
    "docker:push": "docker tag watchmega:latest registry.digitalocean.com/watchmega/watchmega && docker push registry.digitalocean.com/watchmega/watchmega"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qhyun2/Watch-Mega.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/qhyun2/Watch-Mega/issues"
  },
  "homepage": "https://github.com/qhyun2/Watch-Mega#readme",
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "ffprobe": "^1.1.2",
    "ioredis": "^4.22.0",
    "mediainfo.js": "^0.1.4",
    "moment": "^2.29.1",
    "next": "^10.0.8",
    "next-iron-session": "^4.1.12",
    "nprogress": "^0.2.0",
    "opensubtitles-api": "^5.1.2",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "qs": "^6.10.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "socket.io": "^3.0.1",
    "socket.io-client": "^3.1.2",
    "srt-to-vtt": "^1.1.3",
    "swr": "^0.5.5",
    "toastify-js": "^1.9.3",
    "video.js": "^7.0.3",
    "videojs-youtube": "^2.6.1",
    "webtorrent": "^0.110.1",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/ffprobe": "^1.1.1",
    "@types/ioredis": "^4.22.0",
    "@types/node": "^14.14.7",
    "@types/nprogress": "^0.2.0",
    "@types/pino": "^6.3.4",
    "@types/qs": "^6.9.6",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.35",
    "@types/toastify-js": "^1.9.1",
    "@types/video.js": "^7.3.15",
    "@types/webtorrent": "^0.109.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "node_modules"
    ]
  }
}
