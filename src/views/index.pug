doctype html
head
  include head
  link(rel="stylesheet" href="css/toastify.css")
.app
  header
    include navbar
    +navbar("watch")
  body.bg-dark
    .container
      .row.pt-4
        .col-md-10.m-auto
          .alert.alert-dark.bg-secondary(role="alert" style="border-style: none")
            h5.text-center.text-white.mb-0#videoname #{videoName}
      .row
        .col-md-9.m-auto.pt-4
          script(src='/js/watch.js')
          video#video.w-100.h-100(controls)
            source#video-source(src="video" type='video/mp4')
            track#subs(src="subs" kind="captions" label="English" default)
      .row
        .col-md-9.m-auto.pt-4.d-flex.justify-content-center
          button.btn.bg-secondary#nextep Next Episode
      .row
        .col-4.m-auto.pt-4
          .card.bg-secondary
            .card-header.p-0
              button.btn.bg-secondary.w-100.h-100#collapse
                i.fa.fa-angle-right.arrow.text-justify-left
                span#count #{count}
            #users.collapse
              .card-body
                table.table.table-dark.bg-secondary.text-dark.mb-0#users-table
                  tbody
    // modal for joining playing video
    #joinroom.modal.fade.text-white
      .modal-dialog.modal-dialog-centered(role='document')
        .modal-content.bg-secondary
          .modal-body.d-flex.flex-column.justify-content-center
            h2.text-center.p-3 Welcome to WatchMega
            p.text-center The video is already playing
            button#dismiss.btn.btn-success.p-2(type='button')
              h5.mb-0 Start watching
    script(type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js")
