doctype html
head
  include head
  link(rel='stylesheet' href='css/upload/jquery.fileupload.css')
  link(rel='stylesheet' href='css/upload/jquery.fileupload-ui.css')
.app
  header
    include navbar
    +navbar("upload")
  body.bg-dark
    .container
      .row.mt-5.justify-content-center
        .col-10
          form#fileupload(action='' method='POST' enctype='multipart/form-data')
            .row.fileupload-buttonbar.flex-nowrap
              .col-lg-6.d-flex.flex-nowrap
                span.mx-2.btn.btn-success.fileinput-button
                  span Add files
                  input(type='file' name='files[]' multiple='')
                button.mx-2.btn.btn-primary.start(type='submit')
                  span Start upload
                button.mx-2.btn.btn-warning.cancel(type='reset')
                  span Cancel upload
                span.fileupload-process
              .col-lg-6.fileupload-progress
                .progress.align-self-center.h-100
                  .progress-bar.progress-bar-success.w-0
                  h6.progress-extended.d-flex.w-100.h-100.position-absolute.justify-content-center.my-0.align-items-center

            // The table listing the files available for upload/download
            table.table.table-striped(role='presentation')
              tbody.files
  include upload_template
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
  script(src='js/upload/vendor/jquery.ui.widget.js')
  script(src='js/upload/tmpl.min.js')
  script(src='js/upload/jquery.fileupload.js')
  script(src='js/upload/jquery.fileupload-process.js')
  script(src='js/upload/jquery.fileupload-validate.js')
  script(src='js/upload/jquery.fileupload-ui.js')
  script(src='js/upload.js')
